/**CONTAINER**/
Page {
  background-color: white;
}

.photo {
  width: 100%;
  overflow: hidden;
}
.image {
  width: 100%;
}

.video-cover {
  width: 100%;
}

.container {
  padding: 10px;
  font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
  background-color: white;
}

.card {
  display: flex;
  justify-content: space-evenly;
  flex-direction: column;
  margin: 5px;
  margin-bottom: 20px;
}

.name.like {
  display: flex;
  justify-content: space-between;
  flex-direction: row;
  align-items: stretch;
}

.name.like .likes {
  font-size: 16px;
  /* margin-left: 5px; */
  margin-right: 5px;
}

.like-icon:active {
  color:#ED6A5A;
}

.card .h2 {
  font-size: 26px;
  font-weight: normal;  
  color: #ED6A5A;
  
}

.card .h3 {
  font-size: 18px;
  margin-top: 10px;
  margin-bottom: 10px;
  font-weight: lighter;
}

.card .h4 {
  font-size: 18px;
  font-weight: lighter;
  margin-top: 5px;
  text-align: center;
}

.bookmark-button {
  font-size: 18px;
  font-weight: lighter;
  margin: 4px 0px;
  margin-top: 2px;
  font-weight: lighter;
  color:white;
  background-color: #ED6A5A;
}

.container_reviews {
  margin-top: 20px;
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
  background-color: white;
  box-shadow: 0px 1px 15px #CED3DC;

}


.reviews .review-input {
  font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
  font-size: 14px;
  text-align: center;
  font-style: italic;
}

.review-button {
  font-size: 16px;
  font-weight: lighter;
  margin-bottom: 20px;
  font-weight: lighter;
  color:white;
  background-color: #ED6A5A;
}


.reviews .review-style {
  margin: 10px;
  padding-top: 10px;
  font-size: 16px;
  font-weight: bold;
}

.reviews .review-items {
  margin: 10px;
  font-weight: lighter;
  font-size: 16px;
  border-bottom: 1px lightgray solid;
}
.creator-btn {
  font-size: 18px;
  font-weight: lighter;
  margin-top: 20px;
  font-weight: lighter;
  color:white;
  background-color: #ED6A5A;
}






