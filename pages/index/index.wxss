/**index.wxss**/

/**INTRO**/

.intro-container {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 35vh;
  background-size: cover;
  background-position: bottom;
}

.intro-container .h1 {
  color: white;
  font-weight: bold;
  height: 168px;
  margin-left: 45px;
  text-shadow: 2px 2px 2px #CED3DC;
  font-size: 20px;
}
.intro-img{
  width:100%;
  overflow: hidden;
}

.intro-text {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  margin-top: 1em;
  font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif ;
  font-weight:lighter; 
  font-size:20px;
}


/* Header and Genre Wrapper */
.header {
  background-color: white;
  height: 60px;
  width: 100%;
  box-shadow: 0px 1px 15px #CED3DC;
  position: sticky;
  top:0;
  /* top:0;
  z-index: 20; */
  box-sizing: border-box;
  z-index: 10000;
}


.genre-wrapper {
  display: flex;
  margin: 20px 5px;
  box-sizing: border-box;
}

.genre {
  font-size: 16px;
  width: 100px;
  margin: 0 30rpx;
  height: 35px;
  white-space: nowrap;
  color: #ABA9C3;
}

.active {
  color:#ED6A5A;
  font-weight: bold;
}

/* MAP */
