.buttons {
  width: 75px;
  display: flex;
  align-items: flex-end;
  flex-direction: column;
  position: fixed;
  right: 0;
  top: 46%;
  z-index:1;

}

.map-button {
  margin: 10rpx;
  width: 15vw;
  font-weight: lighter;
  color:white;
  background-color: #ED6A5A;
  text-align: left;
}

.list-button {
  margin: 10rpx;
  width: 15vw;
  font-weight: lighter;
  color:white;
  background-color: #ED6A5A;
  text-align: left;
}


/**CONTAINER**/

.container {
  margin-left: 1em;
  margin-right: 1em;
  padding: 40rpx 0;
  color: white;
}

.grid {
  display: grid;
  grid-template-columns: 1fr;
  grid-gap: 20px;
}

.card-product {
  box-shadow: 0 0 5px #CED3DC;
  width: 100%;
  display: inline-block;
  overflow: hidden;
  color: black;
  font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif ;
  margin-bottom: 22px;
}

.productCardImage {
  width: 100%;
  /* height: 160px; */
}

.video-cover {
  width: 100%;
  /* height: 160px;
  align-items: center; */
}


.card-product .h2 {
  font-size: 20px;
  margin: 10px;
  color: black;

}

.card-product .h3 {
  font-size: 18px;
  margin: 10px;
  font-weight: lighter;
}

.detail-btn {
  font-weight: lighter;
  color:white;
  background-color: #ED6A5A;
  margin: 16px;
}
