/* MAP */

.map-button {
  margin: 40rpx;
  width: 100%;
  font-weight: lighter;
  color:white;
  background-color: #ED6A5A;
  
}

/**CONTAINER**/

.container {
  margin-left: 1em;
  margin-right: 1em;
  padding: 40rpx 0;
  color: white;
}

.grid {
  display: grid;
  grid-template-columns: 1fr;
  grid-gap: 20px;
}

.card-product {
  box-shadow: 0 0 5px #CED3DC;
  width: 100%;
  display: inline-block;
  overflow: hidden;
  color: black;
  font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif ;
  margin-bottom: 22px;
}

.productCardImage {
  width: 100%;
  height: 160px;
}

.video-cover {
  width: 100%;
  height: 160px;
}


.card-product .h2 {
  font-size: 20px;
  margin: 10px;
  color: black;

}

.card-product .h3 {
  font-size: 18px;
  margin: 10px;
  font-weight: lighter;
}

