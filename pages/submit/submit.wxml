<!-- Enter Event Name -->
      <view class="page-section">
        <view class="page-section-title">What You Doing?</view>
        <view class="weui-cells weui-cells_after-title">
          <view class="weui-cell weui-cell_input">
            <view class="weui-cell__bd" style="margin: 10rpx 0" >
              <input class="weui-input" name="name" placeholder="Enter Event Name" placeholder-style="color: #ED6A5A; font-weight:bold; font-size:14px"/>
            </view>
          </view>
        </view>
      </view>


<!-- Date Time Picker -->
<view class="page-section">
  <view class="page-section-title">When You Doing It?</view>
      <DateTimePicker title="Start" isRequired="true" bind:dateTimePicker="onDateTimePicker" name='startTime' format='yyyy-MM-dd HH:mm' style="margin: 5px 0; color: #ED6A5A; font-size: 14px"/>
      <DateTimePicker title="End" isRequired="true" bind:dateTimePicker="onDateTimePicker" name='endTime' format='yyyy-MM-dd HH:mm' style="margin: 5px 0; color: #ED6A5A; font-size: 14px"/>
</view>

<!-- Genre Picker -->
<view class="page-section">
    <view class="page-section-title">What Are The ~Vibes~?</view>
      <view class="section">
      <picker class="weui-input" name="genre" bindchange="bindPickerChange" value="{{index}}" range="{{genreArray}}">
        <view class="picker" style="margin: 5px 0; color: #ED6A5A; font-size: 14px">
        {{genre == '' ? 'Select Genre' : genre}}
        </view>
      </picker>
      </view>
</view>

<!-- PRICE -->
    <view class="page-section">
        <view class="page-section-title">How Much $$$?</view>
        <view class="weui-cells weui-cells_after-title">
          <view class="weui-cell weui-cell_input">
            <view class="weui-cell__bd" style="margin: 10rpx 0" >
              <input class="weui-input" name="Price" placeholder="Price" placeholder-style="color: #ED6A5A; font-weight: bold; font-size: 14px"/>
            </view>
          </view>
        </view>
      </view>
      
<!-- Location -->
<view class="page-section">
        <view class="page-section-title">Where's It At?</view>
        <view class="weui-cell weui-cell_input"  bindtap="getLocation" >
        <view class="weui-cell__bd" style="margin: 10rpx 0" >
          <input class="weui-input" name="location"  placeholder="Location" placeholder-style="color: #ED6A5A; font-weight:bold; font-size:14px" value="{{address_name}}"/>
        </view>
      </view>
</view>
<!-- Submit Btn -->
    <view class="btn-area">
        <button class="buttons" formType="submit">Submit ğŸ˜„</button>
        <button class="buttons" formType="reset">Reset ğŸ˜¢</button>
      </view>


