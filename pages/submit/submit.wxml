<view class="page-section">
    <view class="weui-cell__bd" style="margin: 10rpx 0" class="video-upload">
      <button wx:if="{{!vidURL}}" style="margin: 30rpx 0; font-weight:normal; font-size:18px; color:#ED6A5A " name="video" value="{{vidURL}}" bindtap="takeVideo">Press Here to Take or Upload Your Video</button>
      <video wx:else src='{{vidURL}}'></video>
    </view>
</view>

