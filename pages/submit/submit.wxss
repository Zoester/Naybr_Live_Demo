/* pages/submit/submit.wxss */

.title {
  align-items: center;
  font-size: 24px;
  font-weight:bold;
  margin-bottom: 20px;
}

/* Structure */
.container {
  box-sizing: border-box;
  background-color: white;
  margin: 10px;
  padding: 20px 0px;
}

.page-section {
  box-shadow: 0px 1px 15px #CED3DC;
  width: 85vw;
  padding: 10px;
  display: grid;
  align-items: center;
  justify-content: center;
  overflow: hidden;
  color: black;
  font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif ;
  margin-bottom: 30px;
}



.page-section-title {
  font-size: 22px;
  font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
  color: black;
  text-align: center;
  margin: 10px;
}

.video-upload {
  display: flex;
  align-items: center;
  justify-content: center;
}

.weui-input {
  background-color: #F7F7F7;
  width: 70vw;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #ED6A5A;
  font-size: 16px;
  height: 35px;
}

.picker-genre {
  font-size: 16px;
  margin: 5px 0; 
  color: #ED6A5A;
}


.picker-start {
  font-size: 16px;
  margin: 5px 0; 
  color: #ED6A5A
}

